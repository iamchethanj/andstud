<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorCardBkg"
        app:cardCornerRadius="2dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/controlText"
                android:layout_width="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                tools:text="Light 1"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/controlStatus"
                style="@style/Base.Widget.AppCompat.DrawerArrowToggle.Common"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/controlText"/>

            <ImageView
                android:id="@+id/controlImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                tools:src="@drawable/fan"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>